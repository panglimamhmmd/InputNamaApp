<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCD9D9"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/masukkanNama"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@color/design_default_color_secondary"
            android:gravity="center"
            android:text="@string/ketik_namamu_dibawah_ini"
            android:textColor="#5E35B1" />

        <EditText
            android:id="@+id/inputanUser"
            android:layout_width="406dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text="@string/namaaa"
            android:textColor="#98A5AC"
            android:autofillHints=""
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/button"
            android:layout_width="421dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="@string/tampilkann"
            android:textColor="#5E35B1"
            android:textSize="58dp"
            app:backgroundTint="@color/teal_200" />

        <TextView
            android:id="@+id/outputanUser"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:gravity="center"
            android:text="@string/textviewString"
            android:textColor="#455A64"
            android:textSize="25sp"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>